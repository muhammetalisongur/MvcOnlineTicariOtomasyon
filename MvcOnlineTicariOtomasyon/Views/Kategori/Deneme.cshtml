@model MvcOnlineTicariOtomasyon.Models.Siniflar.Class2
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.6.3.js"></script>

<br />
<div>
    <h2>Kategoriler - Urunler</h2>
</div>
<br />
<div>
    @Html.Label("Kategoriler")
    @Html.DropDownList("DrpKategori", Model.Kategoriler, "----Kategori Seciniz-----", new { @class = "form-control" })
    <br />
    @Html.Label("Urunler")
    @Html.DropDownList("DrpUrun", Model.Urunler, "-----Urun Seciniz----", new { @class = "form-control" })

</div>
<br />
Cascading Script Kodları
<script>

    $(function () {

        $('#DrpKategori').change(function () {

            var id = $('#DrpKategori').val();

            $.ajax({

                url: '/Kategori/UrunGetir',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DrpUrun').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DrpUrun').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>