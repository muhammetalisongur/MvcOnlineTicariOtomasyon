@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Urun Adi: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <td>Personel</td>
        <td>Alici</td>
        <td>Tarih</td>
        <td>Kargo Takip</td>
        <td>Detaylar</td>
        <td>QR</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@item.Tarih.ToString("dd MMMM yyyy")</td>
            <td>@item.TakipKodu</td>
            <td><a href="/Kargo/KargoTakip/@item.TakipKodu" class="btn btn-secondary">Kargo Detay</a></td>
            <td><a href="/QR/Index/@item.TakipKodu" class="btn btn-success">QR Kodu</a></td>
        </tr>
    }
</table>
<a href="/Kargo/YeniKargo/" class="btn btn-primary">Yeni Kargo Girisi</a>

