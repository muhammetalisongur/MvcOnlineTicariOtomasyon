@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Personel Getir</h2>

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.PersonelID, new { @class = "form-control" })

        @Html.Label("Ad:")
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PersonelAd, "", new { @style = "color:red" })
        <br />
        @Html.Label("Soyad:")
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        <br />
        @Html.Label("Gorsel:")

        <img src="@Url.Content(Model.PersonelGorsel)" alt="Image" style="width:100px;height:100px" />

        <br />  <br />
        @Html.Label("Gorseli Degistir:")

        <input type="file" name="PersonelGorsel" />
        @*@Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })*@
        <br />
        @Html.Label("Departman:")
        @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.deger, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">Güncelle</button>


}
