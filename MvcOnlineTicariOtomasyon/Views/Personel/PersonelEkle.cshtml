@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Personel Sayfası</h2>
<br />
@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group" method="post">

        @Html.Label("Personel Adı:")
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control", @required = "required" })
        <br />
        @Html.Label("Personel Soyadi:")
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control", @required = "required" })
        <br />
        @Html.Label("Personel Gorsel:")
        <input type="file" name="PersonelGorsel" />
        <br />
        @Html.Label("Personel Departmani:")
        @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.deger, new { @class = "form-control", @required = "required" })
        <br />
        <button class="btn btn-info">Deparman Ekle</button>
    </form>
}