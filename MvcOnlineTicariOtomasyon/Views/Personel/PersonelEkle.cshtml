@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Personel Sayfası</h2>
<br />
<form class="form-group" method="post">

    @Html.Label("Personel Adı:")
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    <br />
    @Html.Label("Personel Soyadi:")
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    @Html.Label("Personel Gorsel:")
    @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })
    <br />
    @Html.Label("Personel Departmani:")
    @Html.DropDownListFor(x=>x.DepartmanID, (List<SelectListItem>)ViewBag.deger ,new {@class = "form-control"})
    <br />
    <button class="btn btn-info">Deparman Ekle</button>
</form>
