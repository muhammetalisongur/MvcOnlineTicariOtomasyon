@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: <b>@ViewBag.deger</b> </li>
</ol>
<div style="background-color:aliceblue">

    <table class="table table-hover">
        <tr>
            <th>Personel ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Görsel</th>
            <th>Satislar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.PersonelID</th>
                <th>@item.PersonelAd</th>
                <th>@item.PersonelSoyad</th>
                <th>@item.PersonelGorsel</th>
                <th><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-info">Satislar</a></th>
            </tr>
        }
    </table>
</div>
<br />
