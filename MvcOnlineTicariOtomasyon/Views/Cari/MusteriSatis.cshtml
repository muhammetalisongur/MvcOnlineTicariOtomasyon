@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Alinan Urunler</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: <b>@ViewBag.deger</b> </li>
</ol>

<table class="table table-info">
    <tr>
        <th>Satis ID</th>
        <th>Urun</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Tarih</th>
        <th>Toplam</th>
        <th>Yazdir</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisID</td>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
            <td>@item.Fiyat</td>
            <td>@item.Adet</td>
            <td>@item.Tarih.ToShortDateString()</td>
            <td>@item.ToplamTutar</td>
            <td><a href="#" class="btn btn" style="background-color:bisque">Yazdir</a></td>
        </tr>
    }

</table>