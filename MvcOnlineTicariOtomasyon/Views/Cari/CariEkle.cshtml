@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Cari Sayfası</h2>
<br />
<form class="form-group" method="post">

    @Html.Label("Ad:")
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Soyad:")
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Sehir:")
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Mail:")
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", @required = "required" })
    <br />
    <button class="btn btn-info">Cari Ekle</button>
</form>