
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

@{
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Karegoriler ve Urun Sayilari");
    grafik.AddLegend(title: "Degerler");
    grafik.AddSeries(name: "Veriler",
        chartType:"Doughnut", // Pie, Area,Bubble, Bar
        xValue: new[] { "Beyaz Esya", "Televizyon", "Bilgisayar", "Kucuk Ev Aletleri" },
        yValues: new[] { 500, 250, 340, 620 }
        );
    grafik.Write();
}
